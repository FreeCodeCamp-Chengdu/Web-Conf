{
    "env": {
        "es6": true,
        "browser": true,
        "amd": true
    },
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-cond-assign": "off",
        "no-console": [
            "error",
            {
                "allow": ["info", "warn", "error", "time", "timeEnd"]
            }
        ],
        "valid-jsdoc": [
            "error",
            {
                "prefer": {
                    "returns": "return"
                },
                "requireParamDescription": false,
                "requireReturn": false,
                "requireReturnDescription": false
            }
        ]
    }
}
