{
    "compilerOptions": {
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "ES6",
        "allowJs": true,
        "useDefineForClassFields": true,
        "jsx": "react-jsx",
        "jsxImportSource": "dom-renderer",
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"]
    },
    "include": ["./source/**/*"]
}
